<div class="chat__container">
    <div class="chat__avatar"></div>
    <div class="chat__content">
        <span class="chat__name">{{ title }}</span>
        <span class="chat__lastmessage">{{ last_message.content }}</span>
    </div>
    <div class="chat__notification">
        <span class="chat__lastmessagedate">{{ last_message.time }}</span>
        {{#if unread_count}}
        <div class="chat__newmessage">{{unread_count}}</div>
        {{/if}}
    </div>
</div>